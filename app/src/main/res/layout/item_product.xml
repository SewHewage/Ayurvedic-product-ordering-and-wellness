<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="8dp"
        android:gravity="center">

        <!-- Product Image -->
        <ImageView
            android:id="@+id/iv_product_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/ic_product_placeholder"
            android:contentDescription="Product Image"
            android:scaleType="centerCrop" />

        <!-- Product Name -->
        <TextView
            android:id="@+id/tv_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="Product Name"
            android:textColor="#212121"
            android:textSize="16sp"
            android:textStyle="bold"
            android:gravity="center" />

        <!-- Product Price -->
        <TextView
            android:id="@+id/tv_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Rs. 500"
            android:textColor="#4CAF50"
            android:textSize="14sp"
            android:gravity="center" />

        <!-- Action Buttons (Add to Cart, Buy Now, Delete) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center">

            <!-- Add to Cart Button -->
            <ImageView
                android:id="@+id/iv_add_to_cart"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="Add to Cart"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"/>

            <!-- Buy Now Button -->
            <ImageView
                android:id="@+id/iv_buy_now"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:contentDescription="Buy Now"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <!-- Delete Product Button -->
            <ImageView
                android:id="@+id/iv_delete_product"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:contentDescription="Delete Product"
                android:padding="8dp"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
